.container.user-new{action: ""}
  = form_for current_user do |f|
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Edit Profile
          .user-name_image.row
            .user-name.col-md-10
              =f.text_field :nickname, placeholder: 'Username'
            .user-image.col-md-2{style: "background-image: url(#{current_user.avatar});"}
              = f.button "Change image", class: "btn.btn-primary"
              = f.file_field :avatar
          =f.email_field :email, placeholder: "Email"
          =f.password_field :password, placeholder: "password"
        .col-md-12
          %h4 Member of
          .user-user-member.row
            .user-name.col-md-12
              =f.text_area :member, placeholder: "Member"
          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              =f.text_area :profile, placeholder: "profile"
          %h4 Works
          .user-name_image.row
            .user-name.col-md-12
              =f. text_area :works, placeholder: "Works"
      .row.text-center.user-btn
        %button.btn.btn-lg.btn-primary.btn-block{type: "submit"} Save


